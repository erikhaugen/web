<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="logfileall" class="org.apache.log4j.RollingFileAppender">
		<param name="File"
			value="/Livescribe/Logs/importsecretkeytool-${logfile}.log" />
		<param name="MaxFileSize" value="20MB" />
		<param name="MaxBackupIndex" value="50" />
		<param name="Threshold" value="DEBUG" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p [%t][%c] %m%n" />
		</layout>
	</appender>
	
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="DEBUG" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n" />
		</layout>
	</appender>

	<appender name="errorlog" class="org.apache.log4j.RollingFileAppender">
		<param name="File"
			value="/Livescribe/Logs/importsecretkeytool-${logfile}.error.log" />
		<param name="MaxFileSize" value="20MB" />
		<param name="MaxBackupIndex" value="50" />
		<param name="Threshold" value="ERROR" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t][%c] %m%n" />
		</layout>
	</appender>

	<logger name="com.livescribe.importsecretkeytool">
		<level value="DEBUG" />
	</logger>
	
	<root>
		<priority value="ERROR" />
		<appender-ref ref="logfileall" />
		<appender-ref ref="errorlog" />
		<appender-ref ref="console" />
	</root>


</log4j:configuration>
