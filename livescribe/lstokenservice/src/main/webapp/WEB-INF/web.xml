<?xml version="1.0" encoding="UTF-8"?>
<web-app
	id="WebApp_ID" version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
		http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>LS Token Service</display-name>

	<!--
	==========================================================================
		Context Parameters
	========================================================================== -->
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>token</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/classes/token-context.xml</param-value>
	</context-param>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/classes/log4j.xml</param-value>
	</context-param>

	<!--
	==========================================================================
		Listeners
	========================================================================== -->
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
	<listener>
		<listener-class>com.livescribe.aws.tokensvc.listener.EmailDeliveryListener</listener-class>
	</listener>
    
	<!--
	==========================================================================
		Servlets
	========================================================================== -->

	<!-- Spring Dispatcher Servlet -->
	<servlet>
		<servlet-name>TokenDispatcherServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/classes/token-servlet.xml</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<!--
	==========================================================================
		Servlet Mappings
	========================================================================== -->

	<!-- Spring Dispatcher Servlet Mapping -->	
    <servlet-mapping>
        <servlet-name>TokenDispatcherServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

	<session-config>
		<session-timeout>10</session-timeout>
	</session-config>

</web-app>
