<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.livescribe.frameworks.orm.fb">
	<class name="DownloadCounter" table="DownloadCounter">
	
		<id name="name" column="name" type="string" length="128">
			<generator class="assigned"/>
		</id>
		
		<property name="description"	column="description"	type="string"	length="512" />
		<property name="counter"		column="counter"		type="long" />
		<property name="creationDate"	column="creationDate"	type="timestamp" />
		
	</class>
</hibernate-mapping>
