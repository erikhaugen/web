<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.livescribe.frameworks.orm.fb.PenSerialFirstRegistration" table="PENSERIALFIRSTREGISTRATION">
	
		<id name="primaryKey" column="primaryKey" type="binary">
			<generator class="assigned"/>
		</id>
		
		<property name="serialNumber"			column="serialNumber"			type="string"	length="128" />
		<property name="firstRegistrationDate"	column="firstRegistrationDate"	type="timestamp" />
		<property name="fk_user"				column="fk_user"				type="binary" />
		
	</class>
</hibernate-mapping>
		