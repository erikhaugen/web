<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.livescribe.frameworks.orm.fb.PreOrderProfile" table="PreOrderProfile">
	
		<id name="emailAddress" column="email_address" type="string" length="128">
			<generator class="assigned"/>
		</id>
		
		<property name="fullname"		column="fullname"			type="string"	length="128" />
		<property name="preOrderDate"	column="pre_order_date"		type="timestamp" />
		<property name="rank"			column="rank"				type="integer" />
		<property name="coupon"			column="coupon"				type="string"	length="64" />
		<property name="userProfilekey"	column="user_profile_key"	type="binary" />
		<property name="orderId"		column="order_id"			type="binary" />
		<property name="preOrderFlag"	column="pre_order_flag"		type="string"	length="1" />
		<property name="notifyFlag"		column="notify_flag"		type="string"	length="1" />
		<property name="quantity"		column="quantity"			type="integer" />
		
	</class>
</hibernate-mapping>
		