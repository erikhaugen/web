<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.livescribe.frameworks.orm.fb">
	<class name="RegisteredDownload" table="RegisteredDownload">
	
		<id name="primaryKey" column="primaryKey" type="binary">
			<generator class="assigned"/>
		</id>
		
		<property name="displayName"		column="displayName"		type="string"	length="64" />
		<property name="downloadTypeKey"	column="downloadTypeKey"	type="binary" />
		<property name="metaInfo"			column="metaInfo"			type="clob" />
		<property name="serialNumber"		column="typeName"			type="string"	length="128" />
		<property name="created"			column="created"			type="timestamp" />
		
	</class>
</hibernate-mapping>
